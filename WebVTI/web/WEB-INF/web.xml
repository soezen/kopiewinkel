<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>InputOpdrachtServlet</servlet-name>
        <servlet-class>servlets.InputOpdrachtServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataServlet</servlet-name>
        <servlet-class>servlets.DataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateOpdrachtServlet</servlet-name>
        <servlet-class>servlets.UpdateOpdrachtServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InputOpdrachtServlet</servlet-name>
        <url-pattern>/InputOpdrachtServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataServlet</servlet-name>
        <url-pattern>/DataServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateOpdrachtServlet</servlet-name>
        <url-pattern>/UpdateOpdrachtServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
